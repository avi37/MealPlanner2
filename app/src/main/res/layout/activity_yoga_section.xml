<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yoga_bg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Views.YogaSectionActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/yogaSection_card_yogaList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="@color/bg_yogaCard_light1"
        app:cardCornerRadius="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="50dp"
            android:text="Yoga\nList"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/yogaSection_card_startYoga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/bg_yogaCard_light2"
        app:cardCornerRadius="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="50dp"
            android:text="Start\nYoga"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

</LinearLayout>