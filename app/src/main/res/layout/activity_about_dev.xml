<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_bg_light_primary"
    tools:context=".Views.AboutDevActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="18sp"
        android:layout_marginTop="25sp"
        android:layout_marginRight="18sp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/codefuel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/about_dev_frame_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18sp"
                android:layout_marginLeft="18sp"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:padding="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2sp"
                    android:text="Website:"
                    android:textColor="@color/mainColorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/about_us_tv_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginLeft="12sp"
                    android:clickable="true"
                    android:padding="2sp"
                    android:text="http://www.codefuelindia.com/"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18sp"
                android:layout_marginLeft="18sp"
                android:orientation="vertical"
                android:padding="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2sp"
                    android:text="E-mail:"
                    android:textColor="@color/mainColorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/about_us_tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginLeft="12sp"
                    android:clickable="true"
                    android:padding="2sp"
                    android:text="info@codefuelindia.com"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18sp"
                android:layout_marginLeft="18sp"
                android:orientation="vertical"
                android:padding="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2sp"
                    android:text="Phone:"
                    android:textColor="@color/mainColorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/about_us_tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12sp"
                    android:layout_marginLeft="12sp"
                    android:clickable="true"
                    android:padding="2sp"
                    android:text="+91 94277-45635"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18sp"
                android:layout_marginLeft="18sp"
                android:orientation="vertical"
                android:padding="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2sp"
                    android:text="Address:"
                    android:textColor="@color/mainColorPrimary"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10sp"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12sp"
                        android:layout_marginLeft="12sp"
                        android:layout_weight="6"
                        android:lines="5"
                        android:padding="2sp"
                        android:text="F1, Ashwamegh City Center,\nOpp. Medical College,\nPolytechnic - Gadhoda road,\nHimmatnagar,\nGujarat 383001"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/about_us_iv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="8sp"
                        android:layout_marginRight="8sp"
                        android:layout_weight="4"
                        android:background="@drawable/rounded_corner_border"
                        android:padding="5sp"
                        android:src="@drawable/ic_action_location" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>