<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Views.ReportHistoryDetailActivity">

    <TextView
        android:id="@+id/reportHistoryDetail_tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="end"
        android:padding="8dp"
        android:text="xx/xx/xxxx"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Name:  "
                android:textColor="@color/raisinBlackDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reportHistoryDetail_tv_reportName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report name"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Doctor name:  "
                android:textColor="@color/raisinBlackDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reportHistoryDetail_tv_doctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Doctor name"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp">

            <TextView
                android:id="@+id/row_listHelp_tv_labName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Lab. name:  "
                android:textColor="@color/raisinBlackDark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reportHistoryDetail_tv_labName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lab. name"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/raisinBlack" />

    <LinearLayout
        android:id="@+id/reportHistoryDetail_tv_tableHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/addReport_tv_paramName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Blood component"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/raisinBlack" />

        <TextView
            android:id="@+id/addReport_tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Your Result"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/raisinBlack" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reportHistoryDetail_recView_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>