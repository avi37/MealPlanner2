<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    tools:context=".Views.ChooseDashActivity">

    <LinearLayout
        android:id="@+id/ll_opt_dash1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/mainColorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Diet\nPlanner"
            android:textColor="@color/dark_white"
            android:textSize="25dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_opt_dash2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/db2ColorPrimary"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Exercise\nPlanner"
            android:textColor="@color/dark_white"
            android:textSize="25dp" />

    </LinearLayout>


</LinearLayout>