<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="12dp"
    android:weightSum="10">

    <TextView
        android:id="@+id/row_addRecipe_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:text="NAME"
        android:textColor="@color/raisinBlack"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/row_addRecipe_iv_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/raisinBlackLight" />

    <ImageView
        android:id="@+id/row_addRecipe_iv_addBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_weight="2"
        android:src="@drawable/ic_green_add" />

</LinearLayout>