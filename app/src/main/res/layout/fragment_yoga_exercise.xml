<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.YogaExerciseFragment">

    <TextView
        android:id="@+id/yogaEx_tv_exName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gs_grey"
        android:gravity="center"
        android:padding="5dp"
        android:text="name"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/yogaEx_iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/yogaEx_iv_restTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="65dp"
            android:background="@color/bg_exCard_light2"
            android:gravity="center"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            android:visibility="gone" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/yogaEx_btn_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="@color/bg_exCard_light1"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/yogaEx_btn_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="@color/bg_exCard_light1"
            android:text="Skip"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>