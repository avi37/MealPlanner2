<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColorPrimary</item>
        <item name="colorPrimaryDark">@color/mainColorPrimaryDark</item>
        <item name="colorAccent">@color/mainColorAccent</item>
    </style>

    <style name="ChooseDash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainColorPrimary</item>
        <item name="colorPrimaryDark">@color/mainColorPrimaryDark</item>
        <item name="colorAccent">@color/dark_white</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainColorPrimary</item>
        <item name="colorPrimaryDark">@color/mainColorPrimaryDark</item>
        <item name="colorAccent">@color/dark_white</item>
    </style>

    <style name="RegisterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mainColorPrimary</item>
        <item name="colorPrimaryDark">@color/mainColorPrimaryDark</item>
        <item name="colorAccent">@color/raisinBlack</item>
    </style>

    <style name="StartExTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/db2ColorPrimary</item>
        <item name="colorPrimaryDark">@color/db2ColorPrimaryDark</item>
        <item name="colorAccent">@color/db2ColorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="start_exercise_theme_appbar_overlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="start_exercise_theme_popupoverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Dash2Theme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/db2ColorPrimary</item>
        <item name="colorPrimaryDark">@color/db2ColorPrimaryDark</item>
        <item name="colorAccent">@color/db2ColorAccent</item>
    </style>


    <style name="Dash3Theme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/db3ColorPrimary</item>
        <item name="colorPrimaryDark">@color/db3ColorPrimaryDark</item>
        <item name="colorAccent">@color/db3ColorAccent</item>
    </style>

    <style name="ExTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/db2ColorPrimary</item>
        <item name="colorPrimaryDark">@color/db2ColorPrimaryDark</item>
        <item name="colorAccent">@color/db2ColorAccent</item>
    </style>

    <style name="ReportsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/db3ColorPrimary</item>
        <item name="colorPrimaryDark">@color/db3ColorPrimaryDark</item>
        <item name="colorAccent">@color/db3ColorAccent</item>
    </style>

    <style name="CommonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/db2ColorPrimary</item>
        <item name="colorPrimaryDark">@color/gs_blue</item>
        <item name="colorAccent">@color/gs_grey</item>
    </style>


</resources>
